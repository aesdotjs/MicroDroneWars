{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../", 
    "composite": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/*"]
    },
    "useDefineForClassFields": false
  },
  "include": ["src/**/*", "../server/src/schemas.ts", "../server/src/ecs/systems/InputSystems.ts", "../server/src/ecs/systems/InputProcessorSystem.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
} 